<div class="row">
  <div class="col-md-10 col-md-offset-1 color height-control question-main">
    <div class="col-sm-9 ">
      <h1>{{model.title}}</h1>
    </div>
    <div class="col-sm-3">
      <div class="author">
        <h5>--{{model.author}}</h5>
      </div>
    </div>
    <hr>
    <div class="col-md-8 col-md-offset-2">
      <hr>
      <p>
      {{model.body}}
      </p>
      <hr>
    </div>
  </div>
</div>


{{#each model.answers as |answer|}}
<div class="row">
  <div class="col-md-8 col-md-offset-1 height-control color question-list-box">
  {{tile-answer answer=answer upvote="upvote" downvote="downvote"}}
  {{edit-answer answer=answer updateAnswer="updateAnswer" deleteAnswer="deleteAnswer"}}
</div>
</div>
{{/each}}
<br>
